{{!< default}} {{!-- VS Code Title Bar --}} <div class="vscode-titlebar">
    <div class="traffic-lights">
        <span class="traffic-light-close"></span>
        <span class="traffic-light-minimize"></span>
        <span class="traffic-light-maximize"></span>
    </div>
    <div class="window-title">{{@site.title}}</div>
    </div>


    {{!-- Main Container --}}
    <div class="vscode-container">

        {{!-- Sidebar / File Explorer --}}
        {{!-- Sidebar / File Explorer --}}
        <aside class="vscode-sidebar">
            <div class="sidebar-header">
                <span class="folder-icon">üìÅ</span>
                <span>Explorer</span>
            </div>
            <div class="file-tree">

                {{!-- Top-level folder for "Posts" --}}
                <div class="file-item file-folder">
                    <span class="file-icon">üìÇ</span>
                    <span>posts ({{pagination.total}})</span>
                </div>

                {{!-- Posts list - Active link is always index page --}}
                <div class="file-item active">
                    <span class="file-icon">üìÑ</span>
                    <a href="{{@site.url}}" style="color: inherit; text-decoration: none;">index.html</a>
                </div>

            

            </div>
        </aside>

        {{!-- Main Editor Area --}}
        <main class="vscode-editor">

            {{!-- Editor Tabs --}}
            <div class="editor-tabs">
                <div class="editor-tab active">
                    <span>üìù</span>
                    <span>posts.md</span>
                </div>
                <div class="editor-tab">
                    <span>‚öôÔ∏è</span>
                    <span>settings.json</span>
                </div>
            </div>

            {{!-- Editor Content --}}
            {{!-- Replace only the Editor Content section in your index.hbs --}}

            <div class="editor-content">

                {{!-- Post Feed --}}
                <div class="post-feed">
                    {{#foreach posts}}
                    <article class="post-card">

                        {{!-- Terminal Window Header --}}
                        <div class="terminal-header">
                            <div class="terminal-dots">
                                <span class="terminal-dot dot-red"></span>
                                <span class="terminal-dot dot-yellow"></span>
                                <span class="terminal-dot dot-green"></span>
                            </div>
                            <span class="terminal-title">bash - {{@number}}</span>
                        </div>

                        {{!-- Terminal Content --}}
                        <div class="terminal-content">

                            {{!-- Command Line: cat post info --}}
                            <div class="terminal-line">
                                <span class="prompt">
                                    <span class="prompt-user">sushant@beyond-syntax</span>:<span
                                        class="prompt-path">~/posts</span><span class="prompt-symbol">$</span>
                                </span>
                                <span class="command">cat post_{{@number}}.md</span>
                            </div>



                            {{!-- Command Line: Display title --}}
                            <div class="terminal-line">
                                <span class="prompt">
                                    <span class="prompt-symbol">$</span>
                                </span>
                                <span class="command">
                                    echo <a href="{{url}}" class="post-card-title">"{{title}}"</a>
                                </span>
                            </div>

                            {{!-- Output: Excerpt --}}
                            {{#if excerpt}}
                            <div class="terminal-output">
                                <p class="post-card-excerpt">
                                    {{excerpt words="35"}}
                                </p>
                            </div>
                            {{/if}}

                            {{!-- Footer with tags and read more --}}
                            <div class="terminal-footer">
                                {{#if tags}}
                                <div class="post-card-tags">
                                    {{#foreach tags}}
                                    <a href="{{url}}" class="post-card-tag">{{name}}</a>
                                    {{/foreach}}
                                </div>
                                {{/if}}

                                <a href="{{url}}" class="read-more">
                                    read full post
                                </a>
                            </div>

                        </div>

                    </article>
                    {{/foreach}}
                </div>

                {{!-- Pagination --}}
                {{pagination}}

            </div>
        </main>

    </div>

    {{!-- Status Bar --}}
    <footer class="vscode-statusbar">
        <div class="statusbar-left">
            <span>‚ö° Ghost {{@site.version}}</span>
            <span>üìù {{pagination.total}} posts</span>
        </div>
        <div class="statusbar-right">
            <span>UTF-8</span>
            <span>Markdown</span>
            <span>Ln {{pagination.page}}, Col 1</span>
        </div>
    </footer>